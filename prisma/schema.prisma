generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  zohoCusID String?
  name      String?
  email     String?  @unique
  password  String?
  phone     String?
  address   String?
  city      String?
  zip       String?
  country   String?  @default("Qatar")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique 
  password  String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  zohoItemId String   @id @map("zoho_item_id")
  name       String?
  price      Decimal?
  tabs       Json     
  pdfs       Json?    
  createdAt  DateTime @default(now()) @map("created_at")
}